<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/login_layout_password_icon"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_key" />
        <android.support.design.widget.TextInputLayout
            android:textColorHint="@color/white"
            android:id="@+id/login_layout_password_inputLayout"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/login_layout_password_icon"
            app:passwordToggleEnabled="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_login_password"
                android:hint="@string/login_signup_password_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_login_layout_forgotPassword"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:text="@string/login_password_forgot_textbutton"
        android:textColor="@color/grey"
        android:textSize="14sp" />
</LinearLayout>